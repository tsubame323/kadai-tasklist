<ul class="list-unstyled">
    <% @tasks.each do |task| %>
    <li class="media mb-3">
              <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
                <div>
          <p><%= task.content %> <%= task.status %><%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm float-right' %><%= link_to "Edit", edit_task_path(task), class: 'btn btn-primary btn-sm float-right' %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>
 